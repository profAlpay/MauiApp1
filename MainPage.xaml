<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="#f5f5f5">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Başlık -->
        <Label Text="Görevlerim" 
               Grid.Row="0"
               FontSize="32"
               TextColor="#2b2b2b"
               Margin="0,20,0,20"/>

        <!-- Görev Listesi -->
        <CollectionView Grid.Row="1" 
                       ItemsSource="{Binding TodoItems}"
                       SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" 
                           Padding="15"
                           BackgroundColor="White"
                           BorderColor="Transparent"
                           CornerRadius="10"
                           HasShadow="True">
                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                            <CheckBox IsChecked="{Binding IsCompleted}"
                                    CheckedChanged="OnCheckBoxCheckedChanged"
                                    VerticalOptions="Center"/>
                            
                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="{Binding Title}"
                                       VerticalOptions="Center"
                                       TextColor="#2b2b2b"/>
                                <Label Text="{Binding ElapsedTime, StringFormat='{0:hh\\:mm\\:ss}'}"
                                       FontSize="12"
                                       TextColor="#666666"
                                       IsVisible="{Binding ElapsedTime, Converter={StaticResource TimeSpanVisibilityConverter}}"/>
                            </VerticalStackLayout>
                            
                            <!-- Timer Butonu -->
                            <Button Grid.Column="2"
                                    Text="{Binding IsTimerRunning, Converter={StaticResource TimerButtonTextConverter}}"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleTimerCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="{Binding IsTimerRunning, Converter={StaticResource TimerButtonColorConverter}}"
                                    TextColor="White"
                                    FontFamily="MaterialIcons"
                                    FontSize="18"
                                    Margin="0,0,5,0"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    CornerRadius="20"/>
                            
                            <!-- Silme Butonu -->
                            <Button Grid.Column="3"
                                    Text="🗑️"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteTodoCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Transparent"
                                    TextColor="#ff4444"
                                    FontSize="18"
                                    Padding="5"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    CornerRadius="20"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Yeni Görev Ekleme Butonu -->
        <Button Grid.Row="2"
                Text="Yeni Görev Ekle"
                Command="{Binding AddTodoCommand}"
                BackgroundColor="#4a90e2"
                TextColor="White"
                CornerRadius="25"
                HeightRequest="50"
                Margin="0,10,0,0"/>
    </Grid>
</ContentPage>
